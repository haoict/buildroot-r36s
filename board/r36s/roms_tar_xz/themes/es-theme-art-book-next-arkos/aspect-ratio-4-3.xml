<theme>
   <formatVersion>7</formatVersion>

   <view name="screen">
      <batteryIndicator name="batteryIndicator">
         <pos>0 0.03125</pos><!-- 0 15 -->
         <size>0.978125 0.066666666666667</size><!-- 626 32 -->
      </batteryIndicator>
   </view>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </helpsystem>
   </view>

   <view name="system">
      <text name="logoText">
         <fontSize>0.0875</fontSize><!-- 42 -->
      </text>
      <image ifSubset="system-view-style:centered|centered-custom|centered-one-logo" name="system-art-mask" extra="true">
         <path>./_inc/images/system-art-mask-4-3.png</path>
      </image>
      <carousel ifSubset="system-view-style:multi|multi-custom" name="systemcarousel">
         <logoSize>1 1</logoSize>
         <maxLogoCount>4</maxLogoCount>
      </carousel>
      <image ifSubset="system-view-style:fullscreen-custom" name="system-art" extra="true">
         <size>0 1</size>
      </image>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <maxSize>0.359375 0.104166666666667</maxSize><!-- 230 50 -->
      </image>
      <text name="logoText">
         <size>0.359375 0.104166666666667</size><!-- 230 50 -->
         <fontSize>0.05</fontSize>
      </text>
      <textlist name="gamelist">
         <fontSize>0.039583333333333</fontSize><!-- 19 -->
         <lineSpacing>1.585</lineSpacing>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <pos>0.5 0.135416666666667</pos><!-- 50% 65 -->
      </image>
      <text name="logoText">
         <pos>0.5 0.135416666666667</pos><!-- 50% 65 -->
      </text>
      <textlist name="gamelist">
         <pos>0.5 0.24</pos><!-- 50% 134 -->
         <size>0.84375 0.725</size><!-- 540 348 -->
      </textlist>
   </view>

   <view name="detailed,video">
      <image name="logo">
         <pos>0.25 0.135416666666667</pos><!-- 160 65 -->
      </image>
      <text name="logoText">
         <pos>0.25 0.135416666666667</pos><!-- 160 65 -->
      </text>
      <textlist name="gamelist">
         <origin>0 0</origin>
         <pos>0.0546875 0.24</pos><!-- 35 134 -->
         <size>0.390625 0.725</size><!-- 250 348 -->
      </textlist>
      <image name="gamelist-background" extra="true">
         <size>0.5 1</size><!-- 320 480 -->
      </image>
   </view>

   <view ifSubset="gamelist-view-style:metadata-on|metadata-on-immersive" name="detailed,video">
      <rating name="md_rating">
         <origin>0 0.5</origin>
         <pos>0.546875 0.71875</pos><!-- 350 345 -->
         <size>0 0.041666666666667</size><!-- x 20 -->
      </rating>
      <image name="md_releasedate_icon">
         <origin>0 0.5</origin>
         <pos>0.734375 0.71875</pos><!-- 470 345 -->
         <size>0.03125 0.041666666666667</size><!-- 20 20 -->
      </image>
      <datetime name="md_releasedate">
         <origin>0 0.5</origin>
         <pos>0.78125 0.71875</pos><!-- 500 345 -->
         <size>0.1875 0.041666666666667</size><!-- 120 20 -->
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.029166666666667</fontSize><!-- 14 -->
         <alignment>left</alignment>
      </datetime>
      <text name="md_description">
         <pos>0.546875 0.78125</pos><!-- 350 375 -->
         <size>0.40625 0.158333333333333</size><!-- 260 78 -->
         <fontSize>0.033333333333333</fontSize><!-- 16 -->
         <lineSpacing>1.22</lineSpacing>
      </text>
      <image name="game-metadata-background" extra="true">
         <origin>0 1</origin>
         <pos>0.5 1</pos><!-- 320 0 -->
         <size>0.5 0.354166666666667</size><!-- 320 170-->
         <zIndex>3</zIndex>
      </image>
   </view>
   <view ifSubset="gamelist-view-style:metadata-on|metadata-on-immersive" name="detailed">
      <image name="md_image">
         <pos>0.75 0.322916666666667</pos><!-- 480 155 -->
         <maxSize ifSubset="gamelist-view-style:metadata-on">0.40625 0.520833333333333</maxSize><!-- 260 250 -->
         <maxSize ifSubset="gamelist-view-style:metadata-on-immersive">0.75 1</maxSize><!-- 480 640 -->
         <zIndex>2</zIndex>
      </image>
   </view>
   <view ifSubset="gamelist-view-style:metadata-on|metadata-on-immersive" name="video">
      <video name="md_video">
         <pos>0.75 0.322916666666667</pos><!-- 480 155 -->
         <maxSize ifSubset="gamelist-view-style:metadata-on">0.40625 0.520833333333333</maxSize><!-- 260 250 -->
         <maxSize ifSubset="gamelist-view-style:metadata-on-immersive">0.75 1</maxSize><!-- 480 640 -->
         <zIndex>2</zIndex>
      </video>
   </view>

   <view ifSubset="gamelist-view-style:metadata-off|metadata-off-immersive" name="detailed">
      <image name="md_image">
         <pos>0.75 0.5</pos><!-- 480 240 -->
         <maxSize ifSubset="gamelist-view-style:metadata-off">0.40625 0.895833333333333</maxSize><!-- 260 430 -->
         <maxSize ifSubset="gamelist-view-style:metadata-off-immersive">1.1 1.1</maxSize>
      </image>
   </view>
   <view ifSubset="gamelist-view-style:metadata-off|metadata-off-immersive" name="video">
      <image ifSubset="gamelist-view-style:metadata-off-immersive" name="md_marquee">
         <pos>0.75 0.5</pos><!-- 480 240 -->
         <maxSize>0.359375 0.895833333333333</maxSize><!-- 230 430 -->
      </image>
      <video name="md_video">
         <pos>0.75 0.5</pos><!-- 480 240 -->
         <maxSize ifSubset="gamelist-view-style:metadata-off">0.40625 0.895833333333333</maxSize><!-- 260 430 -->
         <maxSize ifSubset="gamelist-view-style:metadata-off-immersive">1.1 1.1</maxSize>
      </video>
   </view>

</theme>